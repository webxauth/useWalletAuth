{
	"compilerOptions": {
		"module": "commonjs",
		"lib": ["ESNext", "DOM"],
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"declaration": true,
		"baseUrl": "../",
		"jsx": "react-jsx",
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"moduleResolution": "node"
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
